@model OptimumHR.ViewModel.EmployeeProfileVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Employee Profile</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .profile-header {
            background: linear-gradient(45deg, #007bff, #6610f2);
            color: white;
            padding: 2rem 0;
        }
        .profile-img {
            width: 150px;
            height: 150px;
            object-fit: cover;
            border-radius: 50%;
            border: 5px solid white;
        }
        .document-list a {
            text-decoration: none;
            color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <div class="card" style="display:block" >
            <div class="profile-header text-center mb-3">
                <img src="https://via.placeholder.com/150" class="profile-img" alt="Employee Photo">
                <h2 class="mt-3">@Model.Name</h2>
                <h3 class="mt-3">@Model.Title</h3>
                <p>@Model.Department</p>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div>
                            <h2>Employee Profile</h2>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Name:</strong> @Model.Name</p>
                                    <p><strong>Title:</strong> @Model.Title</p>
                                    <p><strong>Department:</strong> @Model.Department</p>
                                    <p><strong>Email:</strong> @Model.Email</p>
                                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                                    <p><strong>Address:</strong> @Model.Address</p>
                                    <p><strong>Address Location URL:</strong> @Model.AddressLocationURL</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Academic Qualification:</strong> @Model.Acadamic_Qualification</p>
                                    <p><strong>Gender:</strong> @Model.Gender</p>
                                    <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
                                    <p><strong>Nationality ID:</strong> @Model.Nationality_ID</p>
                                    <p><strong>Religion:</strong> @Model.Religion</p>
                                    <p><strong>Social Status:</strong> @Model.SocialStatus</p>
                                    <p><strong>Military Status:</strong> @Model.MilitryStatus</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <p><strong>Hire Date:</strong> @Model.HireDate</p>
                                    <p><strong>Status Id:</strong> @Model.Status</p>
                                    <p><strong>Insurance Number:</strong> @Model.Insurance_Number</p>
                                    <p><strong>Bank Account Number:</strong> @Model.BankAccountNumber</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong>Added By:</strong> @Model.AddedBy</p>
                                    <p><strong>Added Date:</strong> @Model.AddedDate</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <h5>Employee Documents</h5>
                        <div class="d-flex flex-column flex-md-row gap-4 align-items-center justify-content-center">
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                                    <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">List group item heading</h6>
                                            <p class="mb-0 opacity-75">Some placeholder content in a paragraph.</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">now</small>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                                    <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">Another title here</h6>
                                            <p class="mb-0 opacity-75">Some placeholder content in a paragraph that goes a little longer so it wraps to a new line.</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">3d</small>
                                    </div>
                                </a>
                                <a href="#" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                                    <img src="https://github.com/twbs.png" alt="twbs" width="32" height="32" class="rounded-circle flex-shrink-0">
                                    <div class="d-flex gap-2 w-100 justify-content-between">
                                        <div>
                                            <h6 class="mb-0">Third heading</h6>
                                            <p class="mb-0 opacity-75">Some placeholder content in a paragraph.</p>
                                        </div>
                                        <small class="opacity-50 text-nowrap">1w</small>
                                    </div>
                                </a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-head-row">
                        <div class="card-title">Day Off Requests</div>
                    </div>
                </div>
                <div class="card-body">
                    @foreach (var item in Model.DayOffRequests)
                    {
                        <a asp-action="edit" asp-controller="DayOffRequest" asp-route-id="@item.RequestId">
                            <div class="d-flex">

                                <div class="avatar avatar-online">
                                    <span class="avatar-title rounded-circle border border-white bg-info">@item.EmployeeName.Substring(0, 1)</span>
                                </div>
                                <div class="flex-1 ms-3 pt-1">
                                    <h6 class="text-uppercase fw-bold">
                                        @item.EmployeeName
                                        <span class="mr-3 badge badge-@item.Color">@item.RequestType</span>
                                    </h6>
                                    <span class="text-muted">
                                        @item.RequestReason
                                    </span>
                                </div>
                                <div class="float-end pt-1">
                                    <small class="text-muted">@item.RequestDAte</small>
                                </div>
                            </div>
                        </a>
                        <div class="separator-dashed"></div>
                    }
                </div>
            </div>
        </div>
    </div>




    



    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
