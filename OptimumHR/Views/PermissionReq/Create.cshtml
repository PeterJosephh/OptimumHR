@model OptimumHR.Models.PermissionReq

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-8 ms-auto me-auto">
        <div class="card ">
            <div class="card-header">
                <div class="card-head-row">
                    <div class="card-title">Day Off Request</div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-4">
                        <label asp-for="Date" class="control-label">Requested Date</label>
                        <input type="date" asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="StartTime" class="control-label">From</label>
                        <input type="time" asp-for="StartTime" class="form-control" />
                        <span asp-validation-for="StartTime" class="text-danger"></span>
                    </div>

                    <div class="form-group col-4">
                        <label asp-for="EndTime" class="control-label">to</label>
                        <input type="time" asp-for="EndTime" class="form-control" />
                        <span asp-validation-for="EndTime" class="text-danger"></span>
                    </div>
                    <div class="separator-dashed"></div>

                    <div class="form-group col-12">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea rows="3" type="text" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

