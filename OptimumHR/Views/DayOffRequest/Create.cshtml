@model OptimumHR.ViewModel.DayOffReqVM

@{
    ViewData["Title"] = "Create";
}
<div class="row">
    <div class="col-md-8 ms-auto me-auto">
        <div class="card ">
            <div class="card-header">
                <div class="card-head-row">
                    <div class="card-title">Day Off Request</div>
                </div>
            </div>
            <div class="card-body">
                <form asp-action="Create" class="row">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-4">
                        <label asp-for="DayOffTypeId" class="control-label"></label>
                        <select asp-for="DayOffTypeId" class="form-select" required>
                            <option disabled selected>Choose...</option>
                            @foreach (var dep in (List<DayOffType>)ViewData["DayOffTypes"])
                            {
                                <option value="@dep.Id">@dep.Name</option>
                            }
                        </select>
                        <span asp-validation-for="DayOffTypeId" class="text-danger"></span>
                    </div>
                    <div class="form-group col-4">
                        <label asp-for="StartDate" class="control-label"></label>
                        <input type="date" asp-for="StartDate" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <div class="form-group col-4">
                        <label asp-for="EndDate" class="control-label"></label>
                        <input type="date" asp-for="EndDate" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="separator-dashed"></div>

                    <div class="form-group col-12">
                        <label asp-for="Reason" class="control-label"></label>
                        <textarea rows="3" type="text" asp-for="Reason" class="form-control"></textarea>
                        <span asp-validation-for="Reason" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Send" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

<div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
