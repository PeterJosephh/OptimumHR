@model OptimumHR.ViewModel.RequestRespondVM

<div class="row">
    <div class="col-md-8 ms-auto me-auto">
        <div class="card">
            <div class="card-header">
                <div class="card-head-row">
                    <div class="card-title">Day Off Request</div>
                    <div class="card-tools">

                        <span class="badge badge-@Model.Color">@Model.RequestType</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Edit">
                    <div class="row">
                        <div class="form-group col-6">
                            <label asp-for="EmployeeName" class="control-label">Employee Name</label>
                            <input type="text" asp-for="EmployeeName" class="form-control" readonly />
                        </div>
                        <div class="form-group col-6">
                            <label class="control-label">Employee ID</label>

                            <input type="text" asp-for="EmployeeId" class="form-control" readonly />
                        </div>
                        <div class="separator-dashed"></div>

                        <div class="form-group col-4">
                            <label class="control-label">Start Date</label>
                            <input type="text" asp-for="RequestStart" class="form-control" readonly />
                        </div>

                        <div class="form-group col-4">
                            <label class="control-label">End Date</label>

                            <input type="text" asp-for="RequestEnd" class="form-control" readonly />
                        </div>

                        <div class="form-group col-4">
                            <label class="control-label">DayOff Type</label>
                            <input type="text" asp-for="RequestType" class="form-control" readonly />
                        </div>

                        <div class="separator-dashed"></div>
                        <div class="form-group col-12">
                            <label class="control-label">Reason</label>
                            <textarea readonly rows="3" type="text" asp-for="RequestReason" class="form-control"></textarea>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <select class="form-select" asp-for="StatusId">
                                    @foreach (var item in (List<RequestStatus>)ViewData["RequestStatus"])
                                    {
                                        <option value="@item.Id">@item.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4 d-flex align-items-center">
                                <input type="submit" value="Respond" class="btn btn-primary ms-2" />
                            </div>
                        </div>
                    </div>


                </form>

            </div>

        </div>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
